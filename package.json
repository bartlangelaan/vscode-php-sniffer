{
    "name": "phpcbf-formatter",
    "displayName": "PHPCBF Formatter",
    "description": "Formats PHP code using phpcbf.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:php"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "PHPCBF formatter settings",
            "properties": {
                "phpcbf.run": {
                    "type": "string",
                    "default": "onSave",
                    "enum": [
                        "onSave",
                        "onType"
                    ],
                    "markdownDescription": "When to run the `phpcs`. Can be `onSave` or `onType`."
                },
                "phpcbf.onTypeDelay": {
                    "type": "number",
                    "default": 250,
                    "minimum": 0,
                    "markdownDescription": "When `phpcbf.run` is `onType`, this sets the amount of milliseconds the validator will wait after typing has stopped before it will run."
                },
                "phpcbf.executablesFolder": {
                    "scope": "resource",
                    "type": "string",
                    "default": "",
                    "markdownDescription": "The folder where both `phpcs` and `phpcbf` executables are. Use this to specify different executables if it is not in your global `PATH`, such as when using a project-scoped `phpcs` dependency. Include a trailing slash."
                },
                "phpcbf.standard": {
                    "scope": "resource",
                    "type": "string",
                    "default": "",
                    "description": "The PHPCS standard(s) to fix against. Separate multiple standards with a comma."
                },
                "phpcbf.snippetExcludeSniffs": {
                    "scope": "resource",
                    "type": "array",
                    "default": [],
                    "description": "Sniffs to exclude when formatting a code snippet (such as formatting on paste or selection)."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.118",
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.21"
    },
    "dependencies": {
        "lodash": "^4.17.11"
    }
}
